{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "docker-start": "docker-compose up -d",
    "db:init": "ENV=dev && db-migrate --env dev up",
    "db:start":"yarn docker-start && yarn db:init",
    "db:clean": "docker-compose down -v --remove-orphans",
    "build": "rm -rf build && npx tsc",
    "start": "nodemon src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "migrate": "db-migrate --env test up && db-migrate up",
    "test": "export NODE_ENV=test && db-migrate db:create my_store_test && npm run migrate:up > /dev/null && jasmine-ts",
    "tsc": "tsc",
    "migrate:up": "db-migrate up",
    "starto": "docker exec -it psql -U postgres -d my_store"

  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "pg": "^8.5.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^4.3.0",
    "@types/pg": "^7.14.7",
    "jasmine": "^4.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.8.4"
  }
}
